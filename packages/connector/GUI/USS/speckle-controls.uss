@import url("speckle-styles.uss");

.speckle-control__openInNew {
}

.speckle-control__openInNew > .speckle-element__texture-icon {
    background-image: var(--speckle-assets-openInNew);
}

.speckle-control__select {

}

.speckle-control__select > .speckle-element__texture-icon {
    background-image: var(--speckle-assets-check-circle-outline);

}

.speckle-control__refresh {

}

.speckle-control__refresh > .speckle-element__texture-icon {
    background-image: var(--speckle-assets-refresh);
}

.speckle-control__list {

}

.speckle-control__list > .unity-list-view {
    background-color: var(--speckle-colors-unity-dark-gray);
}

.speckle-control__progressbar {
}

.speckle-control__stream-preview {
    flex-grow: 1;
    height: 300px;
}

.speckle-control__stream-preview > .speckle-element__texture-image {
    flex-grow: 1;
    background-color: rgba(245, 245, 245, 255);
}

.speckle-container__stream-info {
    justify-content: space-between;
    flex-grow: 1;
    flex-shrink: 1;
}

.speckle-container__controls {
    justify-content: center;
    align-items: center;
}

.speckle-container__controls .speckle-control__button-icon {
    justify-content: center;
    align-items: center;
}

.speckle-container__controls .speckle-element__texture-icon {
    width: 80%;
    height: 80%;
}

.speckle-control__sender {
    background-image: var(--speckle-assets-sender);
}

.speckle-control__receiver {
    background-image: var(--speckle-assets-receiver);
}

.speckle-control__searchUrl {

}

.speckle-control__searchUrl .unity-text-field {
    flex-grow: 1;
    flex-shrink: 1;
}


